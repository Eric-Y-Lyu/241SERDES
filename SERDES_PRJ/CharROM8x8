        {8'h54,3'd7}: row_bits=8'b00000000;

        // ] (5B)
        {8'h5B,3'd0}: row_bits=8'b01111000;
        {8'h5B,3'd1}: row_bits=8'b00001000;
        {8'h5B,3'd2}: row_bits=8'b00001000;
        {8'h5B,3'd3}: row_bits=8'b00001000;
        {8'h5B,3'd4}: row_bits=8'b00001000;
        {8'h5B,3'd5}: row_bits=8'b00001000;
        {8'h5B,3'd6}: row_bits=8'b01111000;
        {8'h5B,3'd7}: row_bits=8'b00000000;

        // \ (5D)
        {8'h5D,3'd0}: row_bits=8'b01000000;
        {8'h5D,3'd1}: row_bits=8'b00100000;
        {8'h5D,3'd2}: row_bits=8'b00010000;
        {8'h5D,3'd3}: row_bits=8'b00001000;
        {8'h5D,3'd4}: row_bits=8'b00000100;
        {8'h5D,3'd5}: row_bits=8'b00000010;
        {8'h5D,3'd6}: row_bits=8'b00000001;
        {8'h5D,3'd7}: row_bits=8'b00000000;

        // ; (4C)
        {8'h4C,3'd0}: row_bits=8'b00000000;
        {8'h4C,3'd1}: row_bits=8'b00000000;
        {8'h4C,3'd2}: row_bits=8'b00011000;
        {8'h4C,3'd3}: row_bits=8'b00011000;
        {8'h4C,3'd4}: row_bits=8'b00000000;
        {8'h4C,3'd5}: row_bits=8'b00011000;
        {8'h4C,3'd6}: row_bits=8'b00010000;
        {8'h4C,3'd7}: row_bits=8'b00000000;

        // ' (quote) 52
        {8'h52,3'd0}: row_bits=8'b00011000;
        {8'h52,3'd1}: row_bits=8'b00011000;
        {8'h52,3'd2}: row_bits=8'b00001000;
        {8'h52,3'd3}: row_bits=8'b00010000;
        {8'h52,3'd4}: row_bits=8'b00000000;
        {8'h52,3'd5}: row_bits=8'b00000000;
        {8'h52,3'd6}: row_bits=8'b00000000;
        {8'h52,3'd7}: row_bits=8'b00000000;

        // , (41)
        {8'h41,3'd0}: row_bits=8'b00000000;
        {8'h41,3'd1}: row_bits=8'b00000000;
        {8'h41,3'd2}: row_bits=8'b00000000;
        {8'h41,3'd3}: row_bits=8'b00000000;
        {8'h41,3'd4}: row_bits=8'b00000000;
        {8'h41,3'd5}: row_bits=8'b00011000;
        {8'h41,3'd6}: row_bits=8'b00010000;
        {8'h41,3'd7}: row_bits=8'b00100000;

        // . (49)
        {8'h49,3'd0}: row_bits=8'b00000000;
        {8'h49,3'd1}: row_bits=8'b00000000;
        {8'h49,3'd2}: row_bits=8'b00000000;
        {8'h49,3'd3}: row_bits=8'b00000000;
        {8'h49,3'd4}: row_bits=8'b00000000;
        {8'h49,3'd5}: row_bits=8'b00011000;
        {8'h49,3'd6}: row_bits=8'b00011000;
        {8'h49,3'd7}: row_bits=8'b00000000;

        // / (4A)
        {8'h4A,3'd0}: row_bits=8'b00000010;
        {8'h4A,3'd1}: row_bits=8'b00000100;
        {8'h4A,3'd2}: row_bits=8'b00001000;
        {8'h4A,3'd3}: row_bits=8'b00010000;
        {8'h4A,3'd4}: row_bits=8'b00100000;
        {8'h4A,3'd5}: row_bits=8'b01000000;
        {8'h4A,3'd6}: row_bits=8'b10000000;
        {8'h4A,3'd7}: row_bits=8'b00000000;

        // ` (0E)
        {8'h0E,3'd0}: row_bits=8'b00011000;
        {8'h0E,3'd1}: row_bits=8'b00010000;
        {8'h0E,3'd2}: row_bits=8'b00001000;
        {8'h0E,3'd3}: row_bits=8'b00000000;
        {8'h0E,3'd4}: row_bits=8'b00000000;
        {8'h0E,3'd5}: row_bits=8'b00000000;
        {8'h0E,3'd6}: row_bits=8'b00000000;
        {8'h0E,3'd7}: row_bits=8'b00000000;

        // ] already above; add BACKSLASH done above.

        // ===== Arrow keys (second byte of E0-prefixed MAKE) =====
        // UP (E0,75) → use 75
        {8'h75,3'd0}: row_bits=8'b00011000;
        {8'h75,3'd1}: row_bits=8'b00111100;
        {8'h75,3'd2}: row_bits=8'b01111110;
        {8'h75,3'd3}: row_bits=8'b00011000;
        {8'h75,3'd4}: row_bits=8'b00011000;
        {8'h75,3'd5}: row_bits=8'b00011000;
        {8'h75,3'd6}: row_bits=8'b00011000;
        {8'h75,3'd7}: row_bits=8'b00000000;

        // DOWN (E0,72) → 72
        {8'h72,3'd0}: row_bits=8'b00011000;
        {8'h72,3'd1}: row_bits=8'b00011000;
        {8'h72,3'd2}: row_bits=8'b00011000;
        {8'h72,3'd3}: row_bits=8'b00011000;
        {8'h72,3'd4}: row_bits=8'b01111110;
        {8'h72,3'd5}: row_bits=8'b00111100;
        {8'h72,3'd6}: row_bits=8'b00011000;
        {8'h72,3'd7}: row_bits=8'b00000000;

        // LEFT (E0,6B) → 6B
        {8'h6B,3'd0}: row_bits=8'b00001000;
        {8'h6B,3'd1}: row_bits=8'b00011000;
        {8'h6B,3'd2}: row_bits=8'b00111000;
        {8'h6B,3'd3}: row_bits=8'b01111110;
        {8'h6B,3'd4}: row_bits=8'b00111000;
        {8'h6B,3'd5}: row_bits=8'b00011000;
        {8'h6B,3'd6}: row_bits=8'b00001000;
        {8'h6B,3'd7}: row_bits=8'b00000000;

        // RIGHT (E0,74) → 74
        {8'h74,3'd0}: row_bits=8'b00010000;
        {8'h74,3'd1}: row_bits=8'b00110000;
        {8'h74,3'd2}: row_bits=8'b00111000;
        {8'h74,3'd3}: row_bits=8'b01111110;
        {8'h74,3'd4}: row_bits=8'b00111000;
        {8'h74,3'd5}: row_bits=8'b00110000;
        {8'h74,3'd6}: row_bits=8'b00010000;
        {8'h74,3'd7}: row_bits=8'b00000000;

        // ===== ENTER / BKSP (optional visible marks) =====
        // ENTER (5A) render as a corner arrow
        {8'h5A,3'd0}: row_bits=8'b00000000;
        {8'h5A,3'd1}: row_bits=8'b00000000;
        {8'h5A,3'd2}: row_bits=8'b00110000;
        {8'h5A,3'd3}: row_bits=8'b00010000;
        {8'h5A,3'd4}: row_bits=8'b00011110;
        {8'h5A,3'd5}: row_bits=8'b00010010;
        {8'h5A,3'd6}: row_bits=8'b00011110;
        {8'h5A,3'd7}: row_bits=8'b00000000;

        // BACKSPACE (66) render as a left arrow with tail
        {8'h66,3'd0}: row_bits=8'b00000000;
        {8'h66,3'd1}: row_bits=8'b00001000;
        {8'h66,3'd2}: row_bits=8'b00001100;
        {8'h66,3'd3}: row_bits=8'b01111110;
        {8'h66,3'd4}: row_bits=8'b00001100;
        {8'h66,3'd5}: row_bits=8'b00001000;
        {8'h66,3'd6}: row_bits=8'b00000000;
        {8'h66,3'd7}: row_bits=8'b00000000;
        endcase
    end
endmodule
